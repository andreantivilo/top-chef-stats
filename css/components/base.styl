// Base styling

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%
  -webkit-text-size-adjust: none

body
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  font-family: $font-family-helvetica
  font-size: 18px
  line-height: 1.4
  color: white

::-moz-selection
  background-color: mediumorchid
  color: white

::selection
  background-color: mediumorchid
  color: white

a
  text-decoration: none

h1
  margin: 0 20px 60px
  text-align: center

  span
    display: block

    &:first-of-type
      font-size: 50px
      font-weight: bold

    &:last-of-type
      font-size: 30px

// Clearfix
.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both