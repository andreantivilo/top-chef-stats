.stat

  img
    width: 100%
    max-width: 100%

.number
  position: relative
  font-weight: bold

  span
    display: inline-block

  span + span
    margin-left: 15px

.name
  margin-left: 10px
  display: inline-block
  position: absolute
  background: black(.2)
  border-radius: 3px
  font-weight: normal
  line-height: 1

  .avatar
    display: block
    position: absolute

.woman,
.man
  background: no-repeat left top

.woman
  background-image: url(../images/woman.svg)
.man
  background-image: url(../images/man.svg)

.featured
  background: black(.1)
  text-align: center

@media screen and (min-width: 701px)

  .number
    font-size: 85px

  .stat

    h2
      border-bottom: 1px solid white(.5)

    .woman,
    .man
      background-position: left center
      background-size: auto 50px
      padding-left: 40px

    .name
      padding: 8px 45px 6px 10px
      top: 50px
      right: 40px
      font-size: 16px

      .avatar
        width: 90px
        height: @width
        top: -32px
        right: -(@width/2)

  .featured
    margin: 0 0 80px
    padding: 30px 0 20px
    clear: left

@media screen and (max-width: 700px)

  .stat

    &:not(.person)
      padding: 10px 0
      border-bottom: 1px solid white(.5)

      &:last-child
        border-bottom: none

      h2
        padding-top: 10px
        float: left

      .number
        text-align: right
        font-size: 30px

      .woman,
      .man
        background-position: left 9px
        background-size: auto 23px
        padding-left: 23px

    &.person
      margin: 15px 0

      h2
        padding: 20px 0 5px
        border-bottom: 1px solid white(.5)

      .number
        font-size: 55px

      .name
        padding: 8px 40px 8px 10px
        top: 25px
        right: 30px
        font-size: 15px

        .avatar
          width: 70px
          height: @width
          top: -15px
          right: -(@width/2)

  .featured
    margin: 30px 0
    padding: 30px 0 20px

    .number
      font-size: 40px