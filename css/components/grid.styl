@media screen and (min-width: 701px)

  .grid-item
    margin: 0 0 30px
    padding: 0 15px
    float: left

  .grid-sm-1
    width: 100%

  .grid-sm-2
    width: 50%

@media screen and (min-width: 1001px)

  .grid-item
    margin: 0 0 50px
    padding: 0 25px

  .grid-lg-2
    width: 50%

  .grid-lg-3
    width: 33.33%

  .grid-lg-4
    width: 25%

  .grid-lg-5
    width: 20%


